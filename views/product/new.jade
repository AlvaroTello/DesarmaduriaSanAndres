doctype html
html(lang="es")
	head
		title  Desarmaduria San Andres - Listado de Vehiculos
		link(rel="stylesheet" href="/css/animate.css")
		link(rel="stylesheet" href="/css/style.css")
		link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css")
		link(link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css")
	body
		//Contenido de la Pagina
		div(class="container opensans")
			div(class="row")
				div(class="col-lg-12 col-md-12 center-block no-float top-space text-left")
					h1 Agregar Nuevo vehiculo.
					form(method="post" action="/product" style="margin-top:1.5em;")
						//Agregar Nuevo Titulo
						div(class="form-group")
							label Titulo de la Publicacion
							input(type="text" name="title" placeholder="Titulo de la Publicacion" class="form-control")
						//Agregar Fotos (Proximamente)
						//Agregar Nuevo marca y modelo
						div(class="row")
							div(class="col-md-6 col-lg-6")
								div(class="form-group")
									label Fabricante
									input(type="text" name="manufacturer" placeholder="Fabricante" class="form-control")
							div(class="col-md-6 col-lg-6")
								div(class="form-group")
									label Modelo
									input(type="text" name="model" placeholder="Modelo" class="form-control")
						//Agregar Nuevo año y kilometraje
						div(class="row")
							div(class="col-md-6 col-lg-6")
								div(class="form-group")
									label Año de Fabricacion
									input(type="number" name="year" placeholder="1990" class="form-control")
							div(class="col-md-6 col-lg-6")
								div(class="form-group")
									label Kilometraje
									input(type="number" name="klms" placeholder="0" class="form-control")
						//Agregar precio
						div(class="form-group")
							label Valor del Vehiculo
							input(type="number" name="price" placeholder="0" class="form-control")
						//Agregar Descripcion
						div(class="form-group")
								label Descripcion
								textarea(name="description" placeholder="Titulo de la Publicacion" class="form-control")
						//Guardar
						div(class="form-group text-right")
							button(type="submit" class="btn btn-info") Siguiente